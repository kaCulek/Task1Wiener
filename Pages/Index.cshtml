@model IEnumerable<Partner>

@{
    ViewData["Title"] = "Partners";
}

<h1>Partners</h1>
<a href="@Url.Action("Create", "Partner")" class="btn btn-primary">Add Partner</a>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Partner Number</th>
            <th>Partner Type</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partner in Model)
        {
            <tr>
                <td>@partner.FirstName @partner.LastName</td>
                <td>@partner.PartnerNumber</td>
                <td>@(partner.PartnerTypeId == 1 ? "Personal" : "Legal")</td>
                <td>@partner.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a href="@Url.Action("Details", "Partner", new { id = partner.PartnerId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

