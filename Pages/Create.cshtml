@page
@model Partner

@{
    ViewData["Title"] = "Create Partner";
}

<h1>Create Partner</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartnerNumber" class="control-label"></label>
        <input asp-for="PartnerNumber" class="form-control" />
        <span asp-validation-for="PartnerNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CroatianPIN" class="control-label"></label>
        <input asp-for="CroatianPIN" class="form-control" />
        <span asp-validation-for="CroatianPIN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartnerTypeId" class="control-label"></label>
        <select asp-for="PartnerTypeId" class="form-control">
            <option value="1">Personal</option>
            <option value="2">Legal</option>
        </select>
        <span asp-validation-for="PartnerTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedByUser" class="control-label"></label>
        <input asp-for="CreatedByUser" class="form-control" />
        <span asp-validation-for="CreatedByUser" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsForeign" class="control-label"></label>
        <input asp-for="IsForeign" class="form-control" />
        <span asp-validation-for="IsForeign" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExternalCode" class="control-label"></label>
        <input asp-for="ExternalCode" class="form-control" />
        <span asp-validation-for="ExternalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="M">Male</option>
            <option value="F">Female</option>
            <option value="N">Non-Binary</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
